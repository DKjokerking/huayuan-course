/* pages/post-publish/post-publish.wxss */
.container {
  padding: 30rpx;
  background: #fff;
  min-height: 100vh;
}

.title-input {
  font-size: 32rpx;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.content-input {
  width: 100%;
  height: 400rpx;
  font-size: 28rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.image-upload {
  margin-bottom: 30rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.5);
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 36rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  background: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
}

.upload-btn .icon {
  font-size: 60rpx;
  color: #999;
}

.course-select {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.course-name {
  color: #666;
}

.publish-btn {
  background: #07c160;
  color: #fff;
  border-radius: 12rpx;
}

.publish-btn[disabled] {
  background: #9be6b4;
}