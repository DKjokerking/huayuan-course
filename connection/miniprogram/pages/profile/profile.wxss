/* pages/profile/profile.wxss */
.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.user-header {
  background: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  text-align: center;
  margin-bottom: 30rpx;
  position: relative;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.edit-btn {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 26rpx;
  color: #07c160;
  background: none;
  border: none;
  padding: 10rpx 20rpx;
}

.info-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.info-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.value {
  font-size: 30rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
}

.input {
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background: #07c160;
  color: #fff;
  border-radius: 12rpx;
}