/* pages/discussion/discussion.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.course-select {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.publish-btn {
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.post-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.post-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  margin-right: 15rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  margin-bottom: 15rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.content {
  font-size: 28rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.post-footer {
  display: flex;
  justify-content: flex-end;
}

.stat-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.icon {
  margin-right: 6rpx;
}