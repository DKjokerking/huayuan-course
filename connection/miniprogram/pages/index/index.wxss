.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 360rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

/* 导航按钮样式 */
.grid-container {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 30%;
  padding: 10rpx;
  text-align: center;
}

.grid-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.grid-item text {
  font-size: 26rpx;
  color: #333;
}

/* 内容区域通用样式 */
.section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more {
  font-size: 26rpx;
  color: #666;
}

/* 课程列表样式 */
.course-scroll {
  width: 100%;
}

.course-list {
  display: flex;
  padding: 10rpx 0;
}

.course-card {
  flex-shrink: 0;
  width: 280rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.course-image {
  width: 100%;
  height: 160rpx;
}

.course-info {
  padding: 16rpx;
}

.course-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-teacher {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* 活动列表样式 */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-item {
  display: flex;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.activity-image {
  width: 200rpx;
  height: 150rpx;
  flex-shrink: 0;
}

.activity-info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
}

.activity-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}