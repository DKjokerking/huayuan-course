/* pages/course-list/course-list.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.search-box {
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.search-box input {
  height: 70rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.type-filter {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.type-item {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  border-radius: 25rpx;
}

.type-item.active {
  background: #07c160;
  color: #fff;
}

.course-list {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.course-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.course-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.course-info {
  flex: 1;
  margin-left: 20rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.course-teacher {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.course-desc {
  font-size: 26rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}