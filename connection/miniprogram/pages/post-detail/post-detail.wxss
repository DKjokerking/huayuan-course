/* pages/post-detail/post-detail.wxss */
.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.post-header {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: bold;
}

.post-author, .post-date {
  font-size: 24rpx;
  color: #666;
}

.post-content {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
}

.post-image {
  width: 100%;
  height: 200rpx;
  margin-bottom: 10rpx;
}

.comments-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
}

.comments-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-item {
  margin-top: 10rpx;
}

.comment-author {
  font-weight: bold;
}

.comment-input {
  margin-top: 20rpx;
}