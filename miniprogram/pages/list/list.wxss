.container {
  padding: 10px;
}

.post-item {
  border-bottom: 1px solid #ccc;
  padding: 10px 0;
}

.post-content {
  color: #666;
  font-size: 14px;
}

.add-post-button {
  position: fixed;
  bottom: 20px;
  right: 20px;
  z-index: 999;
  background-color: #007AFF; /* 蓝色背景 */
  border: 2px solid #007AFF; /* 蓝色边框 */
  color: #FFFFFF; /* 白色文字 */
  border-radius: 5px; /* 圆角 */
  padding: 10px 20px; /* 内边距 */
}
